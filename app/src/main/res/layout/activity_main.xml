<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_cartel_principal"
    android:hapticFeedbackEnabled="false"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/nav_inferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85">

        <TableRow
            android:id="@+id/app_fila_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_infoG"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:contentDescription="@string/txt_info"
                android:onClick="Info"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/logo_informacion" />

            <ImageButton
                android:id="@+id/btn_progra"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:contentDescription="@string/txt_program"
                android:onClick="progra"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/calendario" />

            <ImageButton
                android:id="@+id/btn_filc"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:contentDescription="@string/txt_FilC"
                android:onClick="FILC"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ninos" />

            <ImageButton
                android:id="@+id/btn_fav"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:contentDescription="@string/txt_Fav"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/favorito" />
        </TableRow>

        <TableRow
            android:id="@+id/txt_fila_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <TextView
                android:id="@+id/txt_1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_info"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_program"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_3"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_FilC"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_4"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_Fav"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/app_fila_2"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageButton
                android:id="@+id/btn_foro"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:contentDescription="@string/txt_Foro"
                android:onClick="Foro"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/discusion" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:contentDescription="@string/txt_Edit"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/libro_abierto" />

            <ImageButton
                android:id="@+id/btn_buscador"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:contentDescription="@string/txt_Busc"
                android:onClick="buscador"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/lupa" />

            <ImageButton
                android:id="@+id/btn_plano"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:contentDescription="@string/txt_plano"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mapa" />
        </TableRow>

        <TableRow
            android:id="@+id/txt_fila_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <TextView
                android:id="@+id/txt_5"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_Foro"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_6"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_Edit"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_7"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_Busc"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_8"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_plano"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/app_fila_3"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageButton
                android:id="@+id/btn_comida"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#EC8585"
                android:contentDescription="@string/txt_Comida"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/restaurante" />

            <ImageButton
                android:id="@+id/btn_hoteles"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#EC8585"
                android:contentDescription="@string/txt_Hotel"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/hotel" />

            <ImageButton
                android:id="@+id/btn_notas"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:contentDescription="@string/txt_Notas"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/notas" />

            <ImageButton
                android:id="@+id/btn_redes"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:contentDescription="@string/txt_Redes"
                android:onClick="Redes"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/red" />
        </TableRow>

        <TableRow
            android:id="@+id/txt_fila_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <TextView
                android:id="@+id/txt_9"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_Comida"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_10"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_Hotel"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_11"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_Notas"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_12"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/txt_Redes"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/app_fila_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_aviso"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundcorner"
                android:contentDescription="@string/txt_Aviso"
                android:onClick="Aviso"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/aviso" />

            <ImageButton
                android:id="@+id/btn_actualizar"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/txt_Act"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/actualizar" />

        </TableRow>

        <TableRow
            android:id="@+id/txt_fila_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <TextView
                android:id="@+id/txt_13"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:text="@string/txt_Aviso"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_14"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_Act"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_inferior"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#462D6E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:id="@+id/nav_abajo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/img_gif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:adjustViewBounds="true"
                android:contentDescription="@string/txt_nav_gif"
                android:scaleType="centerCrop" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF">

                    <ImageView
                        android:id="@+id/img_inicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/txt_nav_inicio"
                        android:padding="8dp"
                        app:srcCompat="@drawable/casa"
                        tools:srcCompat="@drawable/casa" />

                    <ImageView
                        android:id="@+id/img_buscar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/txt_nav_buscar"
                        android:padding="8dp"
                        app:srcCompat="@drawable/lupa"
                        tools:srcCompat="@drawable/lupa" />

                    <ImageView
                        android:id="@+id/img_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/txt_nav_favoritos"
                        android:padding="8dp"
                        app:srcCompat="@drawable/favorito"
                        tools:srcCompat="@drawable/favorito" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:text="@string/txt_nav_inicio"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:text="@string/txt_nav_buscar"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:backgroundTint="#FFFFFF"
                        android:text="@string/txt_nav_favoritos"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

        </TableRow>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>